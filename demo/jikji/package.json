{
    "-": "-----------------------",
    "version": "0.1.0",
    "name": "launcher.sample",
    "author": "vulcan9",
    "description": "인스톨러 설정. onlyLauncher (true) 설정 설명.md 문서를 참조하세요.",
    "--": "-----------------------",

    "build": {
        "appId": "jikji.new.name",
        
        "onlyLauncher": true,
        "install_visualCpp": false,
        "ffmpegIntegration": true,
        
        "CodeSign 설정": "SafeNet Authentication Client",
    
        "codesign": {
            "tockenName": "tovsoft co.,Ltd"
        },

        "기본 설정": "-----------------------",

        "nwVersion": "0.77.0",
        "nwFlavor": "sdk",
        "packed": false,

        "output": "./dist",
        "outputPattern": "${NAME}-${VERSION} (${PLATFORM} ${ARCH})",
        
        "빌드 설정": "-----------------------",

        "targets": [ "nsis7z" ],
        "win": {
            "exeName": "LauncherApp",
            "icon": "launcher/assets/favicon.ico",

            "companyName": "tovsoft",
            "productName": "Launcher App",
            "programGroupName": "토브소프트",
            
            "x_productVersion": "productVersion || version",
            "x_fileVersion": "fileVersion || nwVersion || productVersion",
            "fileDescription": "epub 저작 도구",
            
            "publisher": "(주) 토브소프트",
            "copyright": "tovsoft (c) 2020"
        },

        "nsis": {
            "theme": "theme",
            "license": "LICENSE.txt",
            "web": "https://tovsoft.co.kr/",
            "diffUpdaters": false
        },

        "리소스 설정": "-----------------------",

        "files": [ "**/*" ],
        "excludes": [
            "node_modules"
        ],
        "resource": [
            {
                "src": "한글 폴더",
                "dest": "$APP_PATH/firstrun/한글 폴더"
            },
            {
                "src": "launcher",
                "dest": "$APP_PATH/launcher"
            },
            {
                "src": "uninstall",
                "dest": "$APP_PATH/launcher/uninstall"
            }
        ],

        "uninstall": "$APP_PATH/firstrun",
        
        "childApp": {
            "nwName": "exe 이름 변경",
            "name": "jikji.new.name.launcher",
            "dest": "$APP_PATH/app",
            
            "excludes": [
                "theme",
                "association",
                "LICENSE.txt",
                "onlyLauncher 설정 설명.md"
            ],
            "moves": [],
            
            "uninstallApp": "$LOCALAPPDATA/jikji.new.name.uninstall",
            "uninstallAppFolder": "$APP_PATH/launcher/uninstall"
        },

        "strippedProperties": [
            "scripts",
            "dependencies",
            "devDependencies",
            "build"
        ],
        
        "file association 등록 설정": "-----------------------",

        "associate": [
            {
                "description": "JIK-JI Editor Project File",
                "ext": "pdi",
                "fileClass": "Jik-ji.extTest",
                "icon": "association/jik.ico"
            }
        ]
    }
}
